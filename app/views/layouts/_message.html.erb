<div class="message">
  <% if notice %>
    <div class="alert alert-success alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button><span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
       <%= notice %>
    </div>
  <% elsif alert %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button><span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
       <%= alert %>
    </div>
  <% else %>
    <% flash.each do |name, msg| %>
    <div class="alert alert-<%= "#{name}" %> alert-dismissable fade show" style="position: absolute; top: 70px; width:100%; z-index: 10;">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <strong><%= "#{name}" %>!</strong> <%= "#{msg}" %>
    </div>
    <% end %>
    <% end %>
</div>