<h1>Tweet Index  ------ Test Test</h1>


<%= form_for :tweet, url: tweets_path, method: :post do |f| %>

			 <%= f.text_field :body %>
			
			<%= f.submit "Submit" %>
<% end %>
			
		 


<% @tweets.each do |tweet|	%>
	  
	<%= tweet.body %></br>
	<%= tweet.likes.count %></br>


	<% tweet.replies.each do |reply|	%>
	  
		<%= reply.body %></br>
		<%= link_to "Reply Delete", tweet_reply_path(tweet_id: tweet.id, id: reply.id), method: :delete %></br>

		<%= link_to "Reply Edit!!!!!!!!!!!!!!!!!!!!!!!!!!", edit_tweet_reply_path(tweet_id: tweet.id, id: reply.id) %></br>



 	<% end	%>

	<%= link_to "Tweet Edit", edit_tweet_path(id: tweet.id) %></br>

	<%= link_to "Tweet Delete", tweet_path(id: tweet.id), method: :delete %></br>

	<%= link_to "Reply", new_tweet_reply_path(tweet_id: tweet.id) %></br>


	


	<% if tweet.likes.find_by(user_id: current_user.id) %>
	<% like = tweet.likes.find_by(user_id: current_user.id) %>
	<%= link_to "Unlike", tweet_like_path(tweet_id: tweet.id, id: like.id),method: :delete, class: "btn btn-danger" %></br>
	<% else %>
	<%= link_to "Like", tweet_likes_path(tweet_id: tweet.id),method: :post, class: "btn btn-primary" %></br>
	<% end	%>   


<% end	%>






